@using StudentDemo.Areas.LOC_Country.Models;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model LOC_CountryModel
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class=" text-white py-2">Add Country</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" asp-controller="LOC_Country" asp-action="Save" class="row">
            <div class="border p-3 ">
                @*@<div asp-validation-summary="ModelOnly"></div>*@
                <div class="form-floating py-2 col-12">
                    <input asp-for="CountryID" hidden />
                    <input type="text" class="form-control border-0 shadow" asp-for="CountryName"/>
                    <label class="ms-2" asp-for="CountryName"></label>
                    <span asp-validation-for="CountryName" class="text-danger"></span>
                </div>
                <div class=" form-floating py-2 col-12">
                    <input type="text" class="form-control border-0 shadow" asp-for="CountryCode"/>
                    <label class="ms-2" asp-for="CountryCode"></label>
                    <span asp-validation-for="CountryCode" class="text-danger"></span>
                </div>
                <div class="row mt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Save</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="LOC_Country" asp-action="Index" class="btn btn-outline-primary border form-control">Back to list</a>
                    </div>
                </div>


            </div>
        </form>

    </div>

</div>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
